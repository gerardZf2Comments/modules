<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
                  
    <entity name="ZfModule\Entity\Comment" table="module_comments">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>
       
         <many-to-one field="user" target-entity="\ZfcUserDoctrineORM\Entity\User" >
        
        </many-to-one>
        <field name="moduleId" column="module_id" type="integer"   />
        <field name="comment" type="string" nullable="false" />
        <field name="createdAt" column="created_at" type="datetime"   />
        <field name="parentId" column="parent_id" type="integer"   />
        <field name="hasParent" column="has_parent" type="integer"   />
       
      
        
   <one-to-many field="childComments" target-entity="Comment" mapped-by="parentComments" >
            
          <!--  <join-columns>
                <join-column name="parent_id" referencedColumnName="id"/>
            </join-columns>  -->         
       
  </one-to-many>
   <many-to-one field="parentComments" target-entity="Comment" inversed-by="childComments">
       
   </many-to-one>
        
   
           
               
       
    </entity>

</doctrine-mapping>
